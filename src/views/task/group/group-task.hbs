    $(document).ready(function () {
        /*
        $('.createGroup_icon').click(function () {
            $('.createGroup_icon').hide()
            $('.create').removeClass('d-none')
        })
        */
        $('.app-card-group').click(function () {
            var groupInformation = $(this).children('.groupName_').text()
            alert(groupInformation)
        })
        $('.app-card-group').hover(function () {
            var groupInformation = $(this)
            groupInformation.addClass('background-hover')
        }, function () {
            var groupInformation = $(this)
            groupInformation.removeClass('background-hover')
        })
    })
</script>